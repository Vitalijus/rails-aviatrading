<%= DateTime.now.utc..DateTime.now.utc.end_of_day %><br/>

<h1>Listing lessons</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Course</th>
      <th>Title</th>
      <th>Lesson time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.description %></td>
        <td><%= lesson.course_id %></td>
        <td><%= lesson.title %></td>
        <td><%= lesson.lesson_time %></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

