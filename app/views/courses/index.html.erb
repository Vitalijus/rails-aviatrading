<div id="masonry_container">
    
      <div class="stamp">
        <%= image_tag "student.jpg", width: 464 %>
      </div>

      <% @courses.each do |course| %>
        <div class="box">
          
            <%= link_to course do %>
              <div class="course_title">
                <%= course.language %> <%= course.level %>
              </div>
            <% end %>

            <div class="box_content">

            <table>

              <tr>
                <td>Course type:</td>
                <td><%= course.course_type %></td>
              </tr>

              <tr>
                <td>Registration until:</td>
                <td><%= course.registration_until %></td>
              </tr>

              <tr>
                <td>Start:</td>
                <td><%= course.course_start %></td>
              </tr>

              <tr>
                <td>End:</td>
                <td><%= course.course_end %></td>
              </tr>

              <tr>
                <td>Duration:</td>
                <td><%= course.duration %></td>
              </tr>

              <tr>
                <td>Description:</td>
                <td><%= course.description %></td>
              </tr>
              
            </table>

            </div>

            <div class="box_teacher">

              <tr>
                <td><%= link_to 'Edit', edit_course_path(course) %></td><br/>
                <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            </div>

            <div class="box_price">
              <%= course.price %>â‚¬
            </div>

        </div>
      <% end %>
