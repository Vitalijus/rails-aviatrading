<a name="view_courses">

  <div id="masonry_container">

       <!--<div class="stamp stamp1">
        <div class="fb-like-box" data-href="https://lingonas.com/" data-width="250" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="false"></div>
      </div>-->
    
      <div class="stamp stamp2">

      <div id="stamp_header">
        find courses
      </div>

        <%= search_form_for @q do |f| %>

          <%= f.select :language_cont, ['German', 'English'], :prompt => 'Choose language' %>

          <%= f.select :level_cont, ['A1 Beginner', 'A2 Elementary', 'B1 Intermediate', 'B2 Upper intermediate', 'C1 Advanced', 'C2 Mastery'], :prompt => 'Choose language level' %>

          <%= f.select :course_type_cont, ['Private regular', 'Private intensive', 'Group regular', 'Group intensive'], :prompt => 'Choose course type' %>

          <%= f.select :time_zone_cont, ["American Samoa", "Athens", "Adelaide", "Almaty", "Auckland", "Arizona", "Abu Dhabi", "Astana", "Atlantic Time (Canada)", "Alaska", "Azores", "Amsterdam", "Belgrade", "Brisbane", "Brasilia", "Beijing", "Bogota", "Bern", "Bratislava", "Brussels", "Budapest", "Bucharest", "Bangkok", "Baghdad", "Baku", "Buenos Aires", "Cairo", "Copenhagen", "Canberra", "Chennai", "Chongqing", "Chatham Is.", "Cape Verde Is.", "Caracas", "Chihuahua", "Casablanca", "Central America", "Central Time (US & Canada)", "Dublin", "Dhaka", "Darwin", "Eastern Time (US & Canada)", "Edinburgh", "Ekaterinburg", "Fiji", "Georgetown", "Greenland", "Guam", "Guadalajara", "Harare", "Hobart", "Helsinki", "Hanoi", "Hong Kong", "Hawaii", "Islamabad", "Istanbul", "Irkutsk", "International Date Line West", "Indiana (East)", "Jakarta", "Jerusalem", "Kabul", "Kamchatka",  "Karachi", "Kathmandu", "Kolkata", "Krasnoyarsk", "Kuwait", "Kuala Lumpur", "Kyiv", "La Paz", "Ljubljana", "Lisbon", "London", "Lima", "Madrid", "Marshall Is.", "Magadan", "Mazatlan", "Mountain Time (US & Canada)", "Monrovia", "Mexico City", "Monterrey", "Montevideo", "Mid-Atlantic", "Midway Island", "Minsk", "Moscow", "Muscat", "Mumbai", "Melbourne", "Nairobi", "New Delhi", "New Caledonia", "Newfoundland", "Novosibirsk", "Nuku'alofa", "Osaka", "Pacific Time (US & Canada)", "Paris", "Prague", "Port Moresby", "Perth", "Pretoria", "Quito", "Rangoon", "Riyadh", "Riga", "Saskatchewan", "Samoa", "St. Petersburg", "Sarajevo", "Santiago", "Sapporo", "Seoul", "Solomon Is.", "Sofia", "Sydney", "Singapore", "Skopje", "Stockholm", "Sri Jayawardenepura", "Rome", "Taipei", "Tallinn", "Tashkent", "Tehran",   "Tbilisi", "Tokyo", "Tijuana", "Tokelau Is." "Ulaanbaatar", "Urumqi", "UTC", "Vienna", "Vilnius", "Volgograd", "Vladivostok", "Warsaw", "Wellington", "West Central Africa", "Yakutsk", "Yerevan", "Zagreb"], :prompt => 'Choose time zone' %>


          <%= f.number_field :lesson_per_week_cont, :placeholder => 'Number of lessons per week' %>

          <%= f.submit :class => "search_button" %>
        <% end %>
      </div>

      <% @courses.each do |course| %>
        <div class="box">
            
            <div class="box_course_title">
              <%= link_to course do %>
                <%= course.language %> <%= truncate(course.level, :length => 2, :omission => "") %>
              <% end %>

               <div class="box_course_price">
                <%= course.price %>â‚¬
              </div>

              
              <div class="box_teacher_name">
                with <%= link_to course.teacher, data: { no_turbolink: true }  do %>
                  <%= course.teacher.name %> <%= course.teacher.surname %>
                <% end %>
              </div>
            </div>

            <div class="box_description">
              <%= course.description %>
            </div>

              <table>

                <tr>
                  <td>Course level:</td>
                  <td><strong><%= course.level %></strong></td>
                </tr>

                <tr>
                  <td>Course type:</td>
                  <td><strong><%= course.course_type %></strong></td>
                </tr>

                <tr>
                  <td>Time zone:</td>
                  <td><strong><%= course.time_zone %></strong></td>
                </tr>

                <tr>
                  <td>Lesson time:</td>
                  <td><strong><%= course.time_start %> to <%= course.time_end %></strong></td>
                </tr>

                <tr>
                  <td>Lessons per week:</td>
                  <td><strong><%= course.lesson_per_week %></strong></td>
                </tr>

                <tr>
                  <td>Course start:</td>
                  <td><strong><%= course.course_start.to_formatted_s(:rfc822) %></strong></td>
                </tr>

                <tr>
                  <td>Course end:</td>
                  <td><strong><%= course.course_end.to_formatted_s(:rfc822) %></strong></td>
                </tr>
                
              </table>

                         


            <div class="box_footer">

              <ul>
                  <li>
                    <%= link_to "https://twitter.com/share?url=https%3A%2F%2Flingonas.com#{teacher_path(course.teacher_id)}", :target => "_blank" do %>
                      <%= image_tag "tw_blue.png", width: 25 %>
                    <% end %>
                  </li>               

                <%= fb_share('178872632300191', 'https://www.lingonas.com/', { 
                            :name => "Learning #{course.language} #{course.level} with #{course.teacher.name} #{course.teacher.surname}",
                            :method => "feed",
                            :description => "#{course.description}",
                            :link => "https://www.lingonas.com/#{teacher_path(course)}",
                            :picture => "#{course.teacher.avatar_url}",
                            :caption => "Lingonas. Re-think language learning"
                            }) %>
                <%= link_to $facebook_url do %>
                  <li>
                    <%= image_tag "f_blue.png", width: 25 %>
                  </li>
                <% end %>

                  <li>
                    <%= link_to course.course_pdf_url, :target => "_blank" do %>
                      <%= image_tag "file_red.png", width: 20 %>
                    <% end %>
                  </li>
                  
              </ul>

            </div>

            <div class="box_button_wrapper">

          
          <%= link_to new_course_trial_path(course) do %>
            <div class="box_button_try">
              FREE TRY
            </div> 
          <% end %>            
              

            <%= link_to new_course_order_path(course) do %>
              <div class="box_button_enroll">
                ENROLL
              </div>
            <% end %>
            </div>

        </div>
      <% end %>
    </div>
</a>