      <li><%= f.label :sat, "Saturday" %><br>
      <%= f.radio_button :sat, 'sat', :value => 'sat' %></li>
      <li><%= f.label :sun, "Sunday" %><br>
      <%= f.radio_button :sun, 'sun', :value => 'sun' %></li> 
    </ul>
  </div>


