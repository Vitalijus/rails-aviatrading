

  <div class="new_course_form">

    <%= form_for(@course) do |f| %>
      <% if @course.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @course.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
        </ul>
      </div>
    <% end %>

  <div class="days_wrapper">
    <ul>
      <li><%= f.label :mon, "Monday" %><br>
      <%= f.radio_button :mon, 'mon', :value => 'mon' %></li>
      <li><%= f.label :tue, "Tuesday" %><br>
      <%= f.radio_button :tue, 'tue', :value => 'tue' %></li>
      <li><%= f.label :wed, "Wednesday" %><br>
      <%= f.radio_button :wed, 'wed', :value => 'wed' %></li>
      <li><%= f.label :thu, "Thursday" %><br>
      <%= f.radio_button :thu, 'thu', :value => 'thu' %></li>
      <li><%= f.label :fri, "Friday" %><br>
      <%= f.radio_button :fri, 'fri', :value => 'fri' %></li>
      <li><%= f.label :sat, "Saturday" %><br>
      <%= f.radio_button :sat, 'sat', :value => 'sat' %></li>
      <li><%= f.label :sun, "Sunday" %><br>
      <%= f.radio_button :sun, 'sun', :value => 'sun' %></li> 
    </ul>
  </div>


  <div class="custom-dropdown">
    <%= f.select :language, ['English', 'German'], :prompt => 'Select language' %> 
  </div>

  <div class="custom-dropdown">
    <%= f.select :level, ['A1 Beginner', 'A2 Elementary', 'B1 Intermediate', 'B2 Upper intermediate', 'C1 Advanced', 'C2 Mastery'], :prompt => 'Select level' %> 
  </div>

