<div id="teacher_wrapper">
  <div id="teacher_profile_wrapper">
  	<div id="teacher_profile_image">
      <%= image_tag @teacher.avatar_url(:avatar) %>
  	</div>

    <div id="teacher_profile_social_network">
        <ul>
          <li>
            <%= link_to "https://twitter.com/share?url=https%3A%2F%2Flingonas.com#{teacher_path(@teacher)}", :target => "_blank" do %>
              <%= image_tag "tw_blue.png", width: 25 %>
            <% end %>
          </li>

          <%= fb_share('178872632300191', 'https://www.lingonas.com/', { 
                    :name => "#{@teacher.name} #{@teacher.surname} teacher at Lingonas",
                    :method => "feed",
                    :description => "#{@teacher.about_me}",
                    :link => "https://lingonas.com/#{teacher_path(@teacher)}",
                    :picture => "#{@teacher.avatar_url}",
                    :caption => "lingonas.com. Re-think language learning."
                    }) %>
        <%= link_to $facebook_url do %>
          <li>
            <%= image_tag "f_blue.png", width: 25 %>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
    
	<div id="teacher_profile_attributes_wrapper">
		<div id="teacher_profile_name">
      <%= @teacher.name %> <%= @teacher.surname %>

      <% if current_teacher == @teacher%>
        <%= link_to edit_teacher_registration_path do %>
          <%= image_tag "pencil.png", width: 17 %>
        <% end %>
      <% end %>
    </div>

    <div id="teacher_profile_attribute">
      I teach <%= @teacher.iteach %> & I speak <%= @teacher.ispeak %>
    </div>

    <div id="teacher_profile_attribute">
      Native language: <%= @teacher.native_language %>
    </div>

    <div id="teacher_profile_attribute">
      Location: <%= @teacher.location %>
    </div>

    <div id="teacher_profile_attribute">
      Time Zone: <%= @teacher.time_zone %>
    </div>

    <div id="teacher_profile_attribute">
      Age: <%= @teacher.age %>
    </div>
	</div>

	<div id="teacher_profile_about_me">
    <div id="teacher_profile_about_me_header">
    About Me
    </div>
		<%= @teacher.about_me %>
	</div>
</div>

<div id="masonry_container">

      <% @teacher.courses.each do |course| %>
               		
        <div class="box">

        <% if current_teacher == @teacher %>
	        <div class="box_delete">
	            <%= link_to course, method: :delete, data: { confirm: 'Want to delete this course?'  } do %>
	            	<%= image_tag "remove.png", width: 10 %>
	            <% end %>
	        </div>

          <div class="box_edit">
            <%= link_to edit_course_path(course) do %>
              <%= image_tag "pencil.png", width: 14 %>
            <% end %>
          </div>
	      <% end %>

            <div class="box_course_title">
              <%= course.language %> <%= truncate(course.level, :length => 2, :omission => "") %>

              <div class="box_course_price">
                <%= course.price %>€
              </div>

              <div class="box_teacher_name">
                with <%= course.teacher.name %> <%= course.teacher.surname %>
              </div>
            </div>

            <div class="box_description">
              <%= course.description %>
            </div>

              <table>

                <tr>
                  <td>Course level:</td>
                  <td><strong><%= course.level %></strong></td>
                </tr>

                <tr>
                  <td>Course type:</td>
                  <td><strong><%= course.course_type %></strong></td>
                </tr>

                <tr>
                  <td>Time zone:</td>
                  <td><strong><%= course.time_zone %></strong></td>
                </tr>

                <tr>
                  <td>Lesson time:</td>
                  <td><strong><%= course.time_start %> to <%= course.time_end %></strong></td>
                </tr>

                <tr>
                  <td>Days:</td>
                  <td><strong><%= course.mon %> <%= course.tue %> <%= course.wed %> <%= course.thu %> <%= course.fri %> <%= course.sat %> <%= course.sun %></strong></td>
                </tr>

                <tr>
                  <td>Course start:</td>
                  <td><strong><%= course.course_start.to_formatted_s(:rfc822) %></strong></td>
                </tr>

                <tr>
                  <td>Course end:</td>
                  <td><strong><%= course.course_end.to_formatted_s(:rfc822) %></strong></td>
                </tr>
                
              </table>

                         


            <div class="box_footer">

              <ul>
                  <li>
                    <%= link_to "https://twitter.com/share?url=https%3A%2F%2Flingonas.com#{teacher_path(course.teacher_id)}", :target => "_blank" do %>
                      <%= image_tag "tw_blue.png", width: 25 %>
                    <% end %>
                  </li>

                  <%= fb_share('178872632300191', 'https://www.lingonas.com/', { 
                            :name => "#{course.teacher.name} #{course.teacher.surname} - I teach #{course.language} #{course.level}",
                            :method => "feed",
                            :description => "#{course.teacher.about_me}",
                            :link => "https://lingonas.com/#{teacher_path(course.teacher_id)}",
                            :picture => "#{course.teacher.avatar_url}",
                            :caption => "lingonas.com. Re-think language learning."
                            }) %>
                <%= link_to $facebook_url do %>
                  <li>
                    <%= image_tag "f_blue.png", width: 25 %>
                  </li>
                <% end %>

                  <li>
                    <%= link_to course.course_pdf_url, :target => "_blank" do %>
                      <%= image_tag "file_red.png", width: 20 %>
                    <% end %>
                  </li>
                  
              </ul>

            </div>

            <div class="box_button_wrapper">

          
          <%= link_to new_course_trial_path(course) do %>
            <div class="box_button_try">
              FREE TRY
            </div> 
          <% end %>

            
            

            <!--<%= form_for ([course, course.trials.build]) do |f| %>
          <a href="#1" name="1" onclick="return show();">  </a> 

              <div id="benefits" style="display:none;">
                
                      <%= f.label :name %><br/>
                      <%= f.text_field :name %>

                      <p><%= f.submit "Add comment" %></p>
                      <%= course.price %>€
                    
                
                <div id="display_popup_close">
                  <a onclick="return hide();">click here</a>
                </div> 
              </div>
            <% end %>-->
              
              

            <%= link_to new_course_order_path(course) do %>
              <div class="box_button_enroll">
                ENROLL
              </div>
            <% end %>
            </div>

        </div>
      <% end %>
    </div>

	