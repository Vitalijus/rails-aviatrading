<div id="teacher_login">
    <div id="teacher_login_header">Teacher's Sign Up Form</div>
      <div id="teacher_login_form">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div><%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :class => "teacher_login_field" %></div>

        <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class => "teacher_login_field" %></div>

        <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "teacher_login_field" %></div>

          <div><%= f.label :name %><br />
          <%= f.text_field :name, :class => "teacher_login_field" %></div>

          <div><%= f.label :surname %><br />
          <%= f.text_field :surname, :class => "teacher_login_field" %></div>

          <label class="myLabel">
              <%= f.file_field :cv %>
              <span>Upload CV (pdf, docx)</span>
          </label>

          <label class="myLabel">
              <%= f.file_field :language_proficiency_proof %>
              <span>(1) Language proficiency proof (certificate, diploma etc.)</span>
          </label>

          <label class="myLabel">
              <%= f.file_field :language_proficiency_proof2 %>
              <span>(2) Language proficiency proof (certificate, diploma etc.)</span>
          </label>

          <label class="myLabel">
              <%= f.file_field :language_proficiency_proof3 %>
              <span>(3) Language proficiency proof (certificate, diploma etc.)</span>
          </label>

          <div><%= f.label :public_link, "Or you can add link to files to proof language proficiency" %><br />
          <%= f.text_field :public_link, :class => "teacher_login_field" %></div>

        <div><%= f.submit "Sign Up", :class => "login_submit_button" %></div>
      <% end %>
    </div>
  </div>
  
  <div id="teacher_login_links">
    <%= render "teachers/shared/links" %>
  </div>

