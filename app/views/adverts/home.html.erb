<%= render "landing_image" %>
<div class="home_wrapper">
	<div class="home_container">
	  <div class="home_box_header">
	  	<ul>
	  		<li><%= image_tag "aircraft_type/jet.png", width: 25 %></li>
	  		<li>Jets</li>
	  	</ul>
	  </div>

<div class="box_home">
	<ul>
		<% @helicopters.each do |helicopter| %>
	
  			<li>
  			
			    <%= link_to advert_path(helicopter), data: { no_turbolink: true } do %>
			      <div class="box_image">

			        <% if helicopter.advert_image.blank? %>
			          default pic
			        <% else %>
			          <%= image_tag helicopter.advert_image_url(:advert_image) %>
			        <% end %>

			        <div class="box_price">
			          <%= number_to_currency(helicopter.price, precision: 0, unit: "") %> <%= helicopter.currency %>
			        </div>
			      </div>

			 
		      	<div class="box_make">
		        	<%= helicopter.make %>

		        	<div class="box_model">
		            	<%= helicopter.model %>
		        	</div>
		      	</div>
			    <% end %>

		      	<div class="box_footer_wrapper">
		        	<div class="box_footer none">
		          		<%= helicopter.country %>, <%= helicopter.city %>
		        	</div>
		      	</div>
			</li>
		<% end %>
 	</ul>
</div>

