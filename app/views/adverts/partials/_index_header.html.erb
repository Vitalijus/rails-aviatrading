<header>
	<div id="header_wrapper_dash">
		<nav class="header_nav dash">
				<ul class="active">
					<% if !user_signed_in? %>
						<li>
							<%= link_to pricing_path, data: { no_turbolink: true } do %>
								<span class="new_advert_button">
									SELL AIRCRAFT
								</span>
							<% end %>
						</li>
					<% end %>

					<% if user_signed_in? %>
						<li>
							<%= link_to new_advert_path, data: { no_turbolink: true } do %>
								<span class="new_advert_button">
									New Advert
								</span>
							<% end %>
						</li>
					<% end %>

					<% if user_signed_in? %>
						<li>
							<%= link_to user_path(current_user), data: { no_turbolink: true } do %>
								<span class="my_aircrafts_button">
									My Aircrafts
								</span>
							<% end %>
						</li>
					<% end %>

					<li>
						<%= link_to adverts_path, data: { no_turbolink: true } do %>
							All Aircrafts
						<% end %>
					</li>
					
					<li>
						<%= link_to new_contact_path, data: { no_turbolink: true } do %>
							Contact
						<% end %>
					</li>	

					<% if !user_signed_in? %>
						<li>
							<%= link_to sign_in_path, data: { no_turbolink: true } do %>
								Sign in
							<% end %>
						</li>
					<% end %>

					<% if user_signed_in? %>
					  <li>
					  	<%= link_to destroy_user_session_path, method: :delete do %>
					  		Sign out
					  	<% end %>
					  </li>
					<% end %>
				</ul>
				<a class="toggle-nav" href="#">&#9776;</a>
			</nav>
	</div>
</header>

<script>
jQuery(document).ready(function() {
    jQuery('.toggle-nav').click(function(e) {
        jQuery(this).toggleClass('active');
        jQuery('.header_nav ul').toggleClass('active');
 
        e.preventDefault();
    });
});
</script>