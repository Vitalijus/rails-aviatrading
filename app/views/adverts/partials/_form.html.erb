<% page_title_helper "Advertise your aircraft at AviaTrading" %>

<% meta_description_helper "Create new advert at aviatrading.com. Provide details about your aircraft. The more details you add the higher chances to sell your aircraft quickly." %>

<% unless current_user.adverts.size >= 1 %>
  <ul class="registration_steps step2">
    <li>
      <span><!--line--></span>
      <b>Step 1</b> Register
    </li>

    <li>
      <span class="active"><!--line--></span>
      <b>Step 2</b> Create an advert
    </li>
  </ul>
<% end %>

<% if current_user.id == @advert.user_id or current_user %>

<%= form_for(@advert, :html => { multipart: true }) do |f| %>
  <div class="new_advert_page">
    <div class="new_advert_wrapper">
      <%= render "adverts/new_form/general_details",  f: f %>
      <%= render "adverts/new_form/engine_propeller",  f: f %>
      <%= render "adverts/new_form/additional_info",  f: f %>
      <%= render "adverts/new_form/add_images",  f: f %>
    </div>

    <div class="new_advert_nav">
      <nav>
        <ul>
          <a href="#general_info">
            <li>General details</li>
          </a>

          <a href="#engine_propeller">
            <li>Engine / Propeller</li>
          </a>

          <a href="#additional_info">
            <li>Additional info</li>
          </a>

          <a href="#photos">
            <li>Photos</li>
          </a>

          <a href="#submit">
            <li>Submit</li>
          </a>
        </ul>
      </nav>
    </div>
  </div>

  
<% end %>

<% else %>
  <script type="text/javascript">
    window.location.href="/adverts"  // put your correct path in a string here
  </script>
<% end %>