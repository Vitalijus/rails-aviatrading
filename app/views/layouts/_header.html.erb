<header>
	<div id="header_wrapper">
		<%= link_to root_url, data: { no_turbolink: true } do %>
			<div class="website_logo">
				<span class="icon-propeller"></span>
			</div>
		<% end %>

		<%= link_to root_url, data: { no_turbolink: true } do %>
			<div class="webpage_title">
				AEROHUB
			</div>
		<% end %>

			<div class="header_nav_left">  
			    <ul>  
		        	<%= link_to new_advert_path, data: { no_turbolink: true } do %>
						<li><span class="free_advert_wrapper">NEW ADVERT</span></li>
					<% end %>

					<%= link_to adverts_path do %>
						<li>All Adverts</li>
					<% end %>

					<% if user_signed_in? %>
						<%= link_to user_path(current_user) do %>
							<li>My adverts</li>
					  	<% end %>
					<% end %>
			    </ul>    
			</div> 

			<div class="header_nav_right">
				<ul>
					<% if !user_signed_in? %>
						<%= link_to pricing_path do %>
							<li>Pricing</li>
						<% end %>
					<% end %>

					<%= link_to new_contact_path, data: { no_turbolink: true } do %>
						<li>Contact</li>
					<% end %>	

					<% if !user_signed_in? %>
						<%= link_to sign_in_path do %>
							<li>Login</li>
						<% end %>
					<% end %>

					<% if user_signed_in? %>
					  <li>
					  	<%= link_to "Logout", destroy_user_session_path, method: :delete %>
					  </li>
					<% end %>
				</ul>
			</div>
	</div>
</header>