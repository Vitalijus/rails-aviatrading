<!DOCTYPE html>
<html>
<head>
  <title>School</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://js.stripe.com/v2/", "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>

  <!-- FAVICON -->
  	<%= favicon_link_tag 'favicon.ico' %>

  <!-- GOOGLE FONTS -->
  	<link href='https://fonts.googleapis.com/css?family=Pathway+Gothic+One|Open+Sans:300|Alegreya+Sans+SC|Julius+Sans+One' rel='stylesheet' type='text/css'>

</head>
<body>

<div class="header_login_wrapper">
	<div class="header_login">
		<div class="header_login_nav">

			<%= image_tag "lock.png", width: 12 %>
			  <% if student_signed_in? %>
			    <%= link_to "Sign out", destroy_student_session_path, :method => :delete %>
			  		
			  		<% elsif teacher_signed_in? %>
			  			<%= link_to "Sign out", destroy_teacher_session_path, :method => :delete %>

			  				<% else %>
			    				<%= link_to "Student", new_student_session_path %> | <%= link_to "Teacher", new_teacher_session_path %>
			  <% end %>
		</div>
	</div>
</div>

<div id="header-wrapper">
	<div class="header">

		<%= link_to root_url, data: { no_turbolink: true } do %>
			<div class="header-logo"> 
				<div class="webpage-title">
					Foreign Language School
				</div>
			</div>
		<% end %>

  		<div class="header_navigation">
				<ul>
					<li><%= link_to courses_path, data: { no_turbolink: true } do %>
						HOME
						<% end %>
					</li>

					<% if student_signed_in? %>

				  		<li><%= link_to edit_student_registration_path do %>
				  			DASHBOARD
				  		<% end %>
						</li>

					<% end %>

					<% if teacher_signed_in? %>

						<li><%= link_to new_course_path do %>
								NEW COURSE
							<% end %>
						</li>

				  		<li><%= link_to edit_teacher_registration_path do %>
				  			DASHBOARD
				  		<% end %>
						</li>

					<% end %>
				</ul>
			</div>
	</div>
</div>


<%= yield %>

	<div class="footer">
        <div class="footer-left">
        </div>

        <div class="footer-image">
          <%= image_tag "rails.png", data: {pin_no_hover: "true"}, width: 30 %>
        </div>

        <div class="footer-right">
        </div>
    </div>

<!-- ---------------------------------------->

<!-- MASONRY WORKS WHEN IS BELOW YIELD-->
    <script src="assets/masonry/masonry.pkgd.js"></script> 
    	<script>
     		var $container = $('#masonry_container');
     			$(window).load(function(){

				  $container.imagesLoaded(function(){
				    $container.masonry({
				      itemSelector: '.box',
				      stamp: ".stamp"
				    });
				  });

			});
		</script>

 <!-- JQUERY -->   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

</body>
</html>
