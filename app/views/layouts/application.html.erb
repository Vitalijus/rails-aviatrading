<!-- NOTICE MESSAGE -->
<script>
	$(function () {
	  var alert = $('.alert');
	  if (alert.length > 0) {
	    alert.show();
	    window.setTimeout(function() {
	      alert.fadeOut();
	    }, 4000);
	  }
	});
</script>

<!-- HEADER MENU WHEN SMALL SCREEN -->
<script>
$(function() {  
    var pull        = $('#pull');  
        menu        = $('nav ul');  
        menuHeight  = menu.height();  
  
    $(pull).on('click', function(e) {  
        e.preventDefault();  
        menu.slideToggle();  
    });  
}); 

$(window).resize(function(){  
    var w = $(window).width();  
    if(w > 320 && menu.is(':hidden')) {  
        menu.removeAttr('style');  
    }  
});   
</script>

<header>
	<div id="header_wrapper">
			<div class="header_navigation">  

				<%= link_to root_url, data: { no_turbolink: true } do %>
					<div class="webpage_logo">
						<%= image_tag "propeller.png", width: 60 %>
					</div>

					<div class="webpage_title">
						AEROPOLY
					</div>
				<% end %>

			    <ul>  
		        	<%= link_to new_advert_path do %>
						<li><span class="free_advert_wrapper">FREE ADVERTISE</span></li>
					<% end %>


					<%= link_to new_contact_path do %>
						
						<li class="header_contact_icon"><%= image_tag "message.png", width: 25, :class => "svg contact_icon" %></li>
					<% end %>	

					<li>
						<div class="search_bar_open_button">
							<%= image_tag "search.png" %>
						</div>
					</li>
			    </ul>    
			</div> 
	</div>
</header>

<div class="slide_menu">

	<div class="slide_menu_header">
		Find your aircraft
	</div>

	<div class="slide_menu_search_wrapper">

		<div class="search_bar_close_button">
			<%= image_tag "search_hide.png", width: 40 %>
		</div>

		<%= search_form_for @q do |f| %>
		    <ul>
		      <li><%= f.text_field :make_cont, :placeholder => "Manufacturer" %></li>

		      <li><%= f.text_field :model_cont, :placeholder => "Model" %></li>

		      <li>
		      	<div class="dropdown_list">
		      		<%= f.select :aircraft_type_cont, ['Cessna', "Airbus"], :prompt => 'Aircraft type' %>
		      	</div>
		      </li>

		      <li>
		      	<div class="dropdown_list">
		      		<%= f.select :aircraft_usage_cont, ['Cessna', "Airbus"], :prompt => 'Aircraft usage' %>
		      	</div>
		     </li>

		      <li>
		      	<div class="dropdown_list">
		      		<%= f.select :country_cont, ['Cessna', "Airbus"], :prompt => 'Country' %>
		      	</div>
		     </li>
		      
		      <li><%= f.submit :class => "search_button" %></li>
		    </ul>
		<% end %>
	</div>
</div>

<div class="screen_shadow">
</div>

<%= yield %>

