<!DOCTYPE html>
<html>
<head>
  <title>School</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://js.stripe.com/v2/", "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
</head>
<body>

<div id="header-wrapper">
	<div class="header">
  		<div class="header_navigation">
				<ul>
					<li><%= link_to courses_path, data: { no_turbolink: true } do %>
						COURSES
						<% end %>
					</li>

					<% if teacher_signed_in? %>
						<li><%= link_to new_course_path do %>
							MY COURSES
						<% end %>
					</li>

						<li><%= link_to new_course_path do %>
							NEW COURSE
						<% end %>
					</li>

				  		<li><%= link_to edit_teacher_registration_path do %>
				  			PROFILE
				  		<% end %>
					</li>

					<li><%= link_to destroy_teacher_session_path, method: :delete  do %>
					  		LOGOUT
					  	<% end %>
					</li>

					<% end %>
				</ul>
			</div>
	</div>
</div>


<%= yield %>
	
<div id="user_nav">
  <% if student_signed_in? %>
    Signed in as <%= current_student.email %>. Not you?
    <%= link_to "Sign out", destroy_student_session_path, :method => :delete %>
  <% else %>
    <%= link_to "Sign up", new_student_registration_path %> or <%= link_to "sign in", new_student_session_path %>
  <% end %>
</div>

<div class="user_nav">
  <% if teacher_signed_in? %>
    Signed in as <%= current_teacher.email %>. Not you?
    <%= link_to "Sign out", destroy_teacher_session_path, :method => :delete %>
  <% else %>
    <%= link_to "Sign up", new_teacher_registration_path %> or <%= link_to "sign in", new_teacher_session_path %>
  <% end %>
  		</div>

	<div class="footer">
        <div class="footer-left">
        </div>

        <div class="footer-image">
          <%= image_tag "rails.png", data: {pin_no_hover: "true"}, width: 30 %>
        </div>

        <div class="footer-right">
        </div>
    </div>

<!-- ---------------------------------------->

<!-- MASONRY WORKS WHEN IS BELOW YIELD-->
