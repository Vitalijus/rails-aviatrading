    	<script>
     		var $container = $('#masonry_container');
     			$(window).load(function(){

				  $container.imagesLoaded(function(){
				    $container.masonry({
				      itemSelector: '.box',
				      stamp: ".stamp"
				    });
				  });

			});
		</script>

 <!-- JQUERY -->   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

</body>
</html>
