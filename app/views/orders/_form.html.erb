<div id="order_box_header">
   <%= image_tag "display.png" %> Start <%= @course.language %> <%= truncate(@course.level, :length => 2, :omission => "") %> Course
</div>

<div id="order_wrapper">

<%= form_for([@course, @order]) do |f| %>
  
  <div id="order_box_info">
    <ul>
      <li><%= image_tag "message.png", width: 50 %> <b>1st step:</b> Get email with details from tutor</li>
      <li><%= image_tag "wifi.png", width: 50 %><b>2nd step:</b> Connect to conferencing platform (Adobe Connect)</li>

      <li><%= image_tag "mic.png", width: 50 %><b>You will need:</b> Microphone, speaker & webcam (optional)</li>

      <li>
        <%= image_tag "user.png", width: 50 %>
          <b>Tutor:</b><%= link_to @course.teacher, data: { no_turbolink: true }  do %>
             <%= @course.teacher.name %> <%= @course.teacher.surname %>
          <% end %>
      </li>
      
      <li><%= image_tag "user.png", width: 50 %><b>Still need some help?</b> Feel free to contact us email@email.com</li>

      <li><%= image_tag "chat.png", width: 50 %><b>Need help?</b> Take a look at this <%= link_to @course.teacher, data: { no_turbolink: true }  do %>guide<% end %> or contact us email@email.com </li>
    </ul>

  </div>

  <div id="order_box_payment_form"> 

  <% if @order.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= f.hidden_field :stripe_card_token %> 
    <%= f.hidden_field :amount, :value => @course.price*100 %>  
    <%= f.hidden_field :email, :value => @course.teacher.email %>  

    <!--<div class="order_box_field">
      <%= f.text_field :email, placeholder: "Email for invoice" %>
    </div>-->

    <% if @order.stripe_card_token.present? %>
      Credit card has been provided.
    <% else %>

    <div class="order_box_field">
      <%= text_field_tag :card_number, nil, name: nil, placeholder: "Card Number" %>
    </div>

    <div class="order_box_field">
      <%= text_field_tag :card_code, nil, name: nil, placeholder: "3 Digits Security Code on Card (CVV)" %>
    </div>

    <div class="order_box_field">
      <%= label_tag :card_month, "Card Expiration" %></br>
      <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
      <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
    </div>

    <div class="order_box_field">
      <%= label_tag :currency %></br>
      <%= f.select :currency, ["eur", "usd" ], :prompt => 'Choose currency'  %>
    </div>
    <% end %>
  <div class="order_box_field">
    <%= f.text_field :name_on_card, placeholder: "Name on card" %>
  </div>

<div id="stripe_error">
    <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
  </div>
    <div id="order_box_button">
      <%= f.submit ["ENROLL", @course.price,"â‚¬"], :class => "pay_button" %>
    </div>
    <div id="order_box_secure_pay">
      <ul>
        <li><%= image_tag "ssl.png", width: 115 %></li>
        <li><%= image_tag "visa.png", width: 50 %></li>
        <li><%= image_tag "mastercard.png", width: 50 %></li>
        <li><%= image_tag "amex.png", width: 50 %></li>
      </ul>
    </div>
  </div>
  <% end %>

</div>