<div id="contact_wrapper">
	
	<div id="contact_header">
		CONTACT LINGONAS

	<div id="contact_header_small">
		We are looking forward to hearing from you
	</div>

	<%= image_tag "contact.png", width: 80 %>
	</div>

	<div id="contact_form">
		CONTACT
	

	<%= form_for(@contact) do |f| %>
      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @contact.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
        </ul>
      </div>
    <% end %>


  <div class="new_course_field">
    <%= f.label :name %><br>
    <%= f.text_field :name %> 
  </div>

  <div class="new_course_field">
    <%= f.label :email %><br>
    <%= f.text_field :email %> 
  </div>

  <div class="new_course_field">
    <%= f.label :message %><br>
    <%= f.text_area :message %> 
  </div>

  <div class="action">
    <%= f.submit  ({:class => "new_course_create_button"}) %>
  </div>
<% end %>

</div>
</div>